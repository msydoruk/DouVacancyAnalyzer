@{
    ViewData["Title"] = "DOU Vacancy Analyzer";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="fas fa-search me-2"></i>
                    DOU.ua Vacancy Analyzer for .NET Backend Developers
                </h4>
            </div>
            <div class="card-body">
                <p class="card-text">
                    Analyze job vacancies from DOU.ua and find the best matches for Middle .NET Backend developer profile.
                </p>
                <ul class="list-unstyled mb-4">
                    <li><i class="fas fa-check text-success me-2"></i>Modern Technologies (.NET 6+, Core)</li>
                    <li><i class="fas fa-check text-success me-2"></i>Middle Level Experience (3+ years)</li>
                    <li><i class="fas fa-check text-success me-2"></i>Acceptable English Level (B1+)</li>
                    <li><i class="fas fa-check text-success me-2"></i>No Time Tracking Requirements</li>
                </ul>

                <div id="loadingMessage" class="alert alert-info mb-3" style="display: none;">
                    <i class="fas fa-spinner fa-spin me-2"></i>
                    <span id="loadingText">Loading existing analysis results...</span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                    <button id="startAnalysis" class="btn btn-primary btn-lg">
                        <i class="fas fa-play me-2"></i>
                        Start Analysis
                    </button>
                    <button id="reAnalyzeExisting" class="btn btn-warning btn-lg">
                        <i class="fas fa-redo me-2"></i>
                        Re-Analyze Existing
                    </button>
                    <button id="cancelAnalysis" class="btn btn-danger btn-lg" style="display: none;" disabled>
                        <i class="fas fa-stop me-2"></i>
                        Cancel
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>

<div id="progressSection" class="row mt-4" style="display: none;">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-spinner fa-spin me-2"></i>
                    Analysis Progress
                </h5>
            </div>
            <div class="card-body">
                <div class="progress mb-3">
                    <div id="progressBar" class="progress-bar progress-bar-striped progress-bar-animated"
                         role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                    </div>
                </div>
                <div id="progressMessage" class="text-muted">
                    Preparing analysis...
                </div>
                <div id="progressLog" class="mt-3" style="display: none;">
                    <h6 class="text-muted mb-2">Detailed Progress</h6>
                    <div id="progressLogContent" class="progress-log-content">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="resultsSection" class="row mt-4" style="display: none;">
    
    <div class="col-md-12">
        <div class="card border-0 shadow-lg">
            <div class="card-header bg-gradient-primary text-white">
                <h4 class="mb-0">
                    <i class="fas fa-chart-line me-2"></i>
                    Quick Overview
                </h4>
            </div>
            <div class="card-body">
                <div class="row" id="quickSummary">
                    
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-pie me-2"></i>
                        Detailed Statistics
                    </h5>
                </div>
                <div class="card-body p-4" id="analysisStats">

                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-cogs me-2"></i>
                        Technology Analysis
                    </h5>
                </div>
                <div class="card-body p-4" id="techStats">

                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12 mb-4">
        <div class="card border-0 shadow">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <i class="fas fa-chart-bar me-2"></i>
                    Distribution Charts
                </h5>
            </div>
            <div class="card-body p-4">
                <div class="row">
                    <div class="col-md-6">
                        <canvas id="experienceChart"></canvas>
                    </div>
                    <div class="col-md-6">
                        <canvas id="categoryChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="col-md-12 mb-4" id="newVacanciesSection" style="display: none;">
        <div class="card border-0 shadow">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="fas fa-star me-2"></i>
                    New Vacancies
                    <span class="badge bg-light text-dark ms-2" id="newVacanciesCount">0</span>
                </h5>
            </div>
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div>
                        <small class="text-muted">Showing new vacancies since last run</small>
                    </div>
                    <div>
                        <button id="newVacanciesPrevPage" class="btn btn-sm btn-outline-secondary me-2" disabled>
                            <i class="fas fa-chevron-left"></i> Previous
                        </button>
                        <span id="newVacanciesPageInfo" class="text-muted me-2">Page 1 of 1</span>
                        <button id="newVacanciesNextPage" class="btn btn-sm btn-outline-secondary" disabled>
                            Next <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover table-striped" id="newVacancyTable">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Job Title</th>
                                <th>Company</th>
                                <th>Location</th>
                                <th>Experience</th>
                                <th>English</th>
                                <th>Status</th>
                                <th>Link</th>
                                <th>Response Status</th>
                            </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Matching Vacancies section moved up -->
    <div class="col-md-12 mb-4">
        <div class="card border-0 shadow">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0">
                    <i class="fas fa-bullseye me-2"></i>
                    Matching Vacancies
                    <span class="badge bg-light text-dark ms-2" id="matchingVacanciesCount">0</span>
                </h5>
            </div>
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="filter-buttons">
                        <button id="filterAll" class="btn btn-outline-primary filter-btn">
                            <i class="fas fa-list me-1"></i>
                            All Vacancies
                        </button>
                        <button id="filterResponded" class="btn btn-outline-success filter-btn">
                            <i class="fas fa-check me-1"></i>
                            Responded
                        </button>
                        <button id="filterNotResponded" class="btn btn-outline-warning filter-btn">
                            <i class="fas fa-clock me-1"></i>
                            Not Responded
                        </button>
                    </div>
                    <div>
                        <button id="matchingPrevPage" class="btn btn-sm btn-outline-secondary me-2" disabled>
                            <i class="fas fa-chevron-left"></i> Previous
                        </button>
                        <span id="matchingPageInfo" class="text-muted me-2">Page 1 of 1</span>
                        <button id="matchingNextPage" class="btn btn-sm btn-outline-secondary" disabled>
                            Next <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover table-striped" id="vacancyTable">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Job Title</th>
                                <th>Company</th>
                                <th>Location</th>
                                <th>Experience</th>
                                <th>Years</th>
                                <th>English</th>
                                <th>Score</th>
                                <th>Link</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Modern Stack Vacancies section moved down -->
    <div class="col-md-12 mb-4">
        <div class="card border-0 shadow">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">
                    <i class="fas fa-fire me-2"></i>
                    Modern Stack Vacancies
                    <span class="badge bg-light text-dark ms-2" id="modernStackCount">0</span>
                </h5>
            </div>
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div>
                        <small class="text-muted">Showing modern .NET vacancies with current technologies</small>
                    </div>
                    <div>
                        <button id="modernStackPrevPage" class="btn btn-sm btn-outline-secondary me-2" disabled>
                            <i class="fas fa-chevron-left"></i> Previous
                        </button>
                        <span id="modernStackPageInfo" class="text-muted me-2">Page 1 of 1</span>
                        <button id="modernStackNextPage" class="btn btn-sm btn-outline-secondary" disabled>
                            Next <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover table-striped" id="modernStackTable">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Job Title</th>
                                <th>Company</th>
                                <th>Location</th>
                                <th>Experience</th>
                                <th>Years</th>
                                <th>English</th>
                                <th>Technologies</th>
                                <th>Score</th>
                                <th>Link</th>
                            </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .vacancy-responded {
        background-color: #e8f5e8 !important;
        border-left: 4px solid #28a745;
    }

    .response-status-btn {
        padding: 4px 8px;
        font-size: 0.75rem;
        border-radius: 12px;
        border: none;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-respond {
        background-color: #28a745;
        color: white;
    }

    .btn-respond:hover {
        background-color: #218838;
    }

    .btn-responded {
        background-color: #6c757d;
        color: white;
    }

    .btn-responded:hover {
        background-color: #5a6268;
    }

    .filter-buttons {
        margin-bottom: 15px;
    }

    .filter-btn {
        margin-right: 10px;
        margin-bottom: 5px;
    }
</style>

