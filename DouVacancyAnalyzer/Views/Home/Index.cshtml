            withModernStack: 'With Modern Stack',
            middleLevel: 'Middle Level',
            acceptableEnglish: 'Acceptable English',
            withModernTechnologies: 'With Modern Technologies',
            withOutdatedTechnologies: 'With Outdated Technologies',
            desktopApplications: 'Desktop Applications',
            frontendPositions: 'Frontend Positions',
            withTimeTracker: 'With Time Tracker',
            experienceLevelDistribution: 'Experience Level Distribution',
            aiVacancyCategorization: 'AI Vacancy Categorization',
            vacancyCount: 'Vacancy Count',
            junior: 'Junior',
